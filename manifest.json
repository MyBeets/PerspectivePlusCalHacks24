{
  "manifest_version": 3,
  "name": "Perspective+",
  "description": "YouTube video side panel",
  "version": "1.0",
  "action": {
    "default_icon": "hello_extensions.png",
    "default_title": "Click to open panel"
  },
  "permissions": [
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  }
}